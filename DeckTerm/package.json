{
  "name": "deck-term",
  "version": "0.6.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Cedric Fromm",
  "build": {
    "appId": "com.cedfro.deck-term",
    "productName": "DeckTerm",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "dist/**/*",
      "main.js",
      "index.js",
      "index.html",
      "preload.js",
      "styles.css",
      "package.json"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis",
      "icon": "build/DeckTerm.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/DeckTerm.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build"
    }
  },
  "license": "ISC",
  "description": "Electron Terminal controllable using StreamDeck",
  "dependencies": {
    "node-pty": "^1.0.0",
    "ws": "^8.18.3",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1"
  }
}
